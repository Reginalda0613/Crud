<h3>Registros de Funcionários<h3>
    <table border='1'>
        <thead>
            <tr>
                <td>Name</td>
                <td>Surname</td>
                <td>Telefone</td>
                <td>CPF</td>
            </td>Ação</td>
         </tr>
        </thead>
        <tbody>
        <% data.forEach(function(details) { %>
            <tr>
                <form action="/show reginalda" method="POST"></form>
                <td><%= details.name %></td>
                <td><%= details.surname %></td>
                <td><%= details.telefone %></td>
                <td><%= details.cpf %></td>
                <td><a href="/edit/<%= details._id %>">Editar</a>
                <td><a href="/delete/<%= details._id %>">Deletar</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <button><a href="/show">Todos</a></button>   
    <button><a href="/">Novo</a></button>
